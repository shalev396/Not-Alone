# Use latest secure Node.js LTS image
FROM node:20-alpine3.21

# Set working directory
WORKDIR /server

# Copy package files first to leverage Docker caching
COPY package*.json ./

# Upgrade Alpine packages to fix vulnerabilities
RUN apk update && apk upgrade --available

# Remove old dependencies before installing new ones
RUN rm -rf node_modules package-lock.json 

# Force npm to use cross-spawn@7.0.6
RUN npm install --global cross-spawn@7.0.6

# Install dependencies with deduplication
RUN npm install --omit=dev && npm dedupe

# Copy the rest of the app files
COPY . .

# Security: Run as non-root user
RUN addgroup -S appgroup && adduser -S appuser -G appgroup
USER appuser

# Expose the application port
EXPOSE 3000

# Start the application
CMD ["npm", "start"]
